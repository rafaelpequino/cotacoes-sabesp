    // Fun√ß√£o para colar dados da planilha
    function pasteFromClipboard() {
        navigator.clipboard.readText().then((text) => {
            try {
                // Usar o parser para processar os dados
                const parsedData = parseClipboardData(text);
                
                // Preencher o formul√°rio com os dados parseados
                fillFormWithParsedData(createModal, parsedData);
                
                showPasteNotification();
            } catch (error) {
                alert('Erro ao processar dados da planilha: ' + error.message);
                console.error('Erro completo:', error);
            }
        }).catch(() => {
            alert('N√£o foi poss√≠vel acessar a √°rea de transfer√™ncia. Verifique as permiss√µes do navegador.');
        });
    }

    // Fun√ß√£o para mostrar notifica√ß√£o de cola
    function showPasteNotification() {
        const notification = document.createElement('div');
        notification.className = 'paste-notification';
        notification.textContent = '‚úì Dados colados com sucesso';
        document.body.appendChild(notification);

        setTimeout(() => {
            notification.classList.add('show');
        }, 10);

        setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => {
                document.body.removeChild(notification);
            }, 300);
        }, 2000);
    }

