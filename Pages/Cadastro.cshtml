@page
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - CotacoesEPC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        body {
            background: #13d0ff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .register-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            padding: 40px;
            max-width: 450px;
            width: 100%;
        }

        .logo {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 40px;
        }

        .logo img {
            max-width: 150px;
            height: auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            display: block;
            font-size: 14px;
        }

        .form-control {
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .form-control:focus {
            border-color: #13d0ff;
            box-shadow: 0 0 0 0.2rem rgba(19, 208, 255, 0.25);
            outline: none;
        }

        .form-control.error {
            border-color: #d32f2f;
        }

        .form-control.success {
            border-color: #4caf50;
        }

        .form-text {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
        }

        .form-text.error {
            color: #d32f2f;
        }

        .form-text.success {
            color: #4caf50;
        }

        .btn-register {
            background: #13d0ff;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            transition: transform 0.2s, background-color 0.2s;
            margin-top: 10px;
        }

        .btn-register:hover:not(:disabled) {
            background: #00bfff;
            transform: translateY(-2px);
        }

        .btn-register:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .login-link {
            text-align: center;
            margin-top: 20px;
        }

        .login-link a {
            color: #13d0ff;
            text-decoration: none;
            font-weight: 600;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .alert {
            margin-bottom: 20px;
            border-radius: 6px;
            padding: 12px 16px;
            border: 1px solid transparent;
        }

        .alert-danger {
            background-color: #ffebee;
            border-color: #ef5350;
            color: #c62828;
        }

        .alert-success {
            background-color: #e8f5e9;
            border-color: #66bb6a;
            color: #2e7d32;
        }

        .subtitle {
            text-align: center;
            color: #666;
            font-size: 16px;
            margin-bottom: 30px;
            font-weight: 500;
        }

        .password-toggle {
            position: relative;
        }

        .password-toggle .toggle-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
            font-size: 16px;
            padding: 5px;
        }

        .password-toggle input {
            padding-right: 40px;
        }

        .loading {
            display: none;
            text-align: center;
            margin: 20px 0;
        }

        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #13d0ff;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 1s linear infinite;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="logo">
            <img src="~/images/sabesp.svg" alt="SABESP" />
        </div>

        <p class="subtitle">Sistema de Compartilhamento de Cota√ß√µes</p>

        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger" id="errorAlert" role="alert">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model?.SuccessMessage))
        {
            <div class="alert alert-success" id="successAlert" role="alert">
                @Model.SuccessMessage
            </div>
        }

        <form id="registerForm" method="post" onsubmit="handleSubmit(event)">
            <div class="form-group">
                <label for="registration" class="form-label">N√∫mero de Registro *</label>
                <input type="text" class="form-control" id="registration" name="registration" required 
                       placeholder="Digite seu n√∫mero de registro" />
            </div>

            <div class="form-group">
                <label for="name" class="form-label">Nome Completo *</label>
                <input type="text" class="form-control" id="name" name="name" required placeholder="Seu nome completo" />
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email *</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="seu@email.com" />
            </div>

            <div class="form-group password-toggle">
                <label for="password" class="form-label">Senha *</label>
                <input type="password" class="form-control" id="password" name="password" required 
                       placeholder="M√≠nimo 6 caracteres" />
                <button type="button" class="toggle-btn" onclick="togglePasswordVisibility('password')">üëÅ</button>
                <div class="form-text">M√≠nimo 6 caracteres, com letras e n√∫meros</div>
            </div>

            <div class="form-group password-toggle">
                <label for="confirmPassword" class="form-label">Confirmar Senha *</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required 
                       placeholder="Confirme a senha" />
                <button type="button" class="toggle-btn" onclick="togglePasswordVisibility('confirmPassword')">üëÅ</button>
            </div>

            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Criando sua conta...</p>
            </div>

            <button type="submit" class="btn-register" id="submitBtn">Criar Conta</button>
        </form>

        <div class="login-link">
            J√° tem conta? <a href="/">Fa√ßa login aqui</a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/api.js"></script>
    <script>
        function togglePasswordVisibility(fieldId) {
            const field = document.getElementById(fieldId);
            field.type = field.type === 'password' ? 'text' : 'password';
        }

        async function handleSubmit(event) {
            event.preventDefault();

            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const registration = document.getElementById('registration').value.trim();

            // Valida√ß√£o de campos vazios
            if (!name || !email || !password || !confirmPassword || !registration) {
                await Swal.fire({
                    icon: 'warning',
                    title: 'Campos Obrigat√≥rios',
                    text: 'Por favor, preencha todos os campos',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#13d0ff'
                });
                return;
            }

            // Valida√ß√£o de senha curta
            if (password.length < 6) {
                await Swal.fire({
                    icon: 'warning',
                    title: 'Senha Fraca',
                    text: 'A senha deve ter no m√≠nimo 6 caracteres',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#13d0ff'
                });
                return;
            }

            // Valida√ß√£o de senhas iguais
            if (password !== confirmPassword) {
                await Swal.fire({
                    icon: 'warning',
                    title: 'Senhas Diferentes',
                    text: 'As senhas n√£o coincidem. Por favor, verifique',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#13d0ff'
                });
                return;
            }

            // Mostrar loading
            const loading = document.getElementById('loading');
            const submitBtn = document.getElementById('submitBtn');
            loading.style.display = 'block';
            submitBtn.disabled = true;

            try {
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        name,
                        email,
                        password,
                        registration
                    })
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    // Redirecionar direto para dashboard
                    window.location.href = '/dashboard';
                } else {
                    let errorMessage = result?.message || 'Erro ao criar conta';
                    let title = 'Erro ao Cadastrar';
                    let icon = 'error';
                    
                    // Tratamento sem√¢ntico de erros espec√≠ficos
                    if (errorMessage.includes('email')) {
                        title = 'Email Duplicado';
                        icon = 'warning';
                    } else if (errorMessage.includes('registro') || errorMessage.includes('N√∫mero de registro')) {
                        title = 'N√∫mero de Registro Inv√°lido';
                        icon = 'warning';
                    } else if (errorMessage.includes('j√° foi utilizado')) {
                        title = 'Registro J√° em Uso';
                        icon = 'info';
                    }
                    
                    await Swal.fire({
                        icon: icon,
                        title: title,
                        text: errorMessage,
                        confirmButtonText: 'Tentar Novamente',
                        confirmButtonColor: '#13d0ff'
                    });
                }
            } catch (error) {
                console.error('Erro na requisi√ß√£o:', error);
                await Swal.fire({
                    icon: 'error',
                    title: 'Erro na Requisi√ß√£o',
                    text: 'Ocorreu um erro ao processar seu cadastro. Verifique sua conex√£o e tente novamente.',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#13d0ff'
                });
            } finally {
                loading.style.display = 'none';
                submitBtn.disabled = false;
            }
        }
    </script>
</body>
</html>

