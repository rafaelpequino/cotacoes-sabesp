@page
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - CotacoesEPC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .register-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            padding: 40px;
            max-width: 450px;
            width: 100%;
        }

        .logo {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo img {
            max-width: 150px;
            height: auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            display: block;
            font-size: 14px;
        }

        .form-control {
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }

        .form-control.error {
            border-color: #d32f2f;
        }

        .form-control.success {
            border-color: #4caf50;
        }

        .form-text {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
        }

        .form-text.error {
            color: #d32f2f;
        }

        .form-text.success {
            color: #4caf50;
        }

        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 10px;
        }

        .btn-register:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

        .btn-register:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .login-link {
            text-align: center;
            margin-top: 20px;
        }

        .login-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .alert {
            margin-bottom: 20px;
            border-radius: 6px;
            padding: 12px 16px;
            border: 1px solid transparent;
        }

        .alert-danger {
            background-color: #ffebee;
            border-color: #ef5350;
            color: #c62828;
        }

        .alert-success {
            background-color: #e8f5e9;
            border-color: #66bb6a;
            color: #2e7d32;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 10px;
            font-size: 28px;
        }

        .subtitle {
            text-align: center;
            color: #666;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .password-toggle {
            position: relative;
        }

        .password-toggle .toggle-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
            font-size: 16px;
            padding: 5px;
        }

        .password-toggle input {
            padding-right: 40px;
        }

        .loading {
            display: none;
            text-align: center;
            margin: 20px 0;
        }

        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 1s linear infinite;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="logo">
            <img src="~/images/sabesp.svg" alt="SABESP" />
        </div>

        <h2>CotacoesEPC</h2>
        <p class="subtitle">Criar nova conta</p>

        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger" id="errorAlert" role="alert">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model?.SuccessMessage))
        {
            <div class="alert alert-success" id="successAlert" role="alert">
                @Model.SuccessMessage
            </div>
        }

        <form id="registerForm" method="post" onsubmit="handleSubmit(event)">
            <div class="form-group">
                <label for="registration" class="form-label">N√∫mero de Registro *</label>
                <input type="text" class="form-control" id="registration" name="registration" required 
                       placeholder="Digite seu n√∫mero de registro" onblur="verifyRegistration()" />
                <div class="form-text" id="registrationStatus"></div>
            </div>

            <div class="form-group">
                <label for="name" class="form-label">Nome Completo *</label>
                <input type="text" class="form-control" id="name" name="name" required placeholder="Seu nome completo" />
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email *</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="seu@email.com" />
            </div>

            <div class="form-group password-toggle">
                <label for="password" class="form-label">Senha *</label>
                <input type="password" class="form-control" id="password" name="password" required 
                       placeholder="M√≠nimo 6 caracteres" />
                <button type="button" class="toggle-btn" onclick="togglePasswordVisibility('password')">üëÅ</button>
                <div class="form-text">M√≠nimo 6 caracteres, com letras e n√∫meros</div>
            </div>

            <div class="form-group password-toggle">
                <label for="confirmPassword" class="form-label">Confirmar Senha *</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required 
                       placeholder="Confirme a senha" />
                <button type="button" class="toggle-btn" onclick="togglePasswordVisibility('confirmPassword')">üëÅ</button>
            </div>

            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Criando sua conta...</p>
            </div>

            <button type="submit" class="btn-register" id="submitBtn">Criar Conta</button>
        </form>

        <div class="login-link">
            J√° tem conta? <a href="/">Fa√ßa login aqui</a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/api.js"></script>
    <script>
        let registrationVerified = false;

        function togglePasswordVisibility(fieldId) {
            const field = document.getElementById(fieldId);
            field.type = field.type === 'password' ? 'text' : 'password';
        }

        async function verifyRegistration() {
            const registration = document.getElementById('registration').value.trim();
            const statusDiv = document.getElementById('registrationStatus');
            const submitBtn = document.getElementById('submitBtn');

            if (!registration) {
                statusDiv.textContent = '';
                registrationVerified = false;
                submitBtn.disabled = true;
                return;
            }

            try {
                const response = await api.request('/auth/verify-registration', 'POST', { registration });
                
                if (response.isAllowed) {
                    statusDiv.textContent = '‚úì Registro v√°lido!';
                    statusDiv.className = 'form-text success';
                    registrationVerified = true;
                    submitBtn.disabled = false;
                } else {
                    statusDiv.textContent = '‚úó Registro inv√°lido ou j√° utilizado';
                    statusDiv.className = 'form-text error';
                    registrationVerified = false;
                    submitBtn.disabled = true;
                }
            } catch (error) {
                statusDiv.textContent = '‚úó Erro ao verificar registro';
                statusDiv.className = 'form-text error';
                registrationVerified = false;
                submitBtn.disabled = true;
            }
        }

        async function handleSubmit(event) {
            event.preventDefault();

            if (!registrationVerified) {
                alert('Por favor, verifique seu n√∫mero de registro');
                return;
            }

            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const registration = document.getElementById('registration').value.trim();

            // Valida√ß√µes
            if (!name || !email || !password || !confirmPassword) {
                alert('Por favor, preencha todos os campos');
                return;
            }

            if (password.length < 6) {
                alert('A senha deve ter no m√≠nimo 6 caracteres');
                return;
            }

            if (password !== confirmPassword) {
                alert('As senhas n√£o coincidem');
                return;
            }

            // Mostrar loading
            const loading = document.getElementById('loading');
            const submitBtn = document.getElementById('submitBtn');
            loading.style.display = 'block';
            submitBtn.disabled = true;

            try {
                const response = await api.login(email, password);
                
                // Na verdade, usar endpoint de registro
                const result = await api.request('/auth/register', 'POST', {
                    name,
                    email,
                    password,
                    registration
                });

                if (result && result.success) {
                    // Armazenar token
                    document.cookie = `authToken=${result.token}; path=/; secure; httponly`;
                    
                    // Redirecionar para dashboard
                    window.location.href = '/dashboard';
                } else {
                    alert(result.message || 'Erro ao criar conta');
                }
            } catch (error) {
                alert(`Erro: ${error.message}`);
            } finally {
                loading.style.display = 'none';
                submitBtn.disabled = false;
            }
        }

        // Desabilitar submit button inicialmente
        document.getElementById('submitBtn').disabled = true;
    </script>
</body>
</html>

